<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">

    <Button
            android:text="Button 1"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/button1" android:layout_weight="3"/>
    <Button
            android:text="Button 2"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/button2"
            android:layout_gravity="center" android:layout_weight="1"/>
    <Button
            android:text="Button 3"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/button3" android:layout_gravity="right"
            android:layout_weight="7"/>
</LinearLayout>